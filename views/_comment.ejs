<link rel="stylesheet" href="/css/_comment.css" />
<li id="comments-container">
  <div id="comment">
    <h3><%= comment.content %></h3>

    <small> <%= comment.user.name %> </small>
  </div>
  <small>
    <% if (locals.user){ %>
    <a
      class="toggle-like-button"
      data-likes="<%= comment.likes.length %>"
      href="/likes/toggle/?id=<%=comment._id%>&type=Comment"
    >
      <%= comment.likes.length %> Likes
    </a>
    <% }else{ %> <%= comment.likes.length %> Likes <% } %>
  </small>
  <!-- <div><%= comment.user._id %> <%= locals.user.id %></div> -->
  <% if (locals.user && locals.user.id == comment.user._id) { %>
  <div id="delete-comment">
    <a href="/comments/destroy/<%= comment.id%> "
      ><span class="material-symbols-outlined"> delete_forever </span></a
    >
  </div>
  <% } %>
</li>
